{
	"name": "TableProgressTracking",
	"author": [
		"Telepedia Ltd."
	],
	"url": "https://www.mediawiki.org/wiki/Extension:TableProgressTracking",
	"descriptionmsg": "tableprogresstracking-desc",
	"license-name": "Apache-2.0",
	"type": "parserhook",
	"version": "1.1.1",
	"requires": {
		"MediaWiki": ">= 1.43.0"
	},
	"MessagesDirs": {
		"TableProgressTracking": [
			"i18n"
		]
	},
	"ResourceFileModulePaths": {
		"localBasePath": "resources",
		"remoteExtPath": ""
	},
	"ResourceModules": {
		"ext.tableProgressTracking.styles": {
			"class": "MediaWiki\\ResourceLoader\\CodexModule",
			"styles": [
				"index.less"
			],
			"codexStyleOnly": "true",
			"codexComponents": [
				"CdxCheckbox"
			]
		},
		"ext.tableProgressTracking.scripts": {
			"scripts": [
				"index.js"
			],
			"dependencies": [
				"mediawiki.user"
			]
		}
	},
	"Hooks": {
		"ParserFirstCallInit": "main",
		"LoadExtensionSchemaUpdates": "main",
		"MultiContentSave": "main"
	},
	"HookHandlers": {
		"main": {
			"class": "Telepedia\\Extensions\\TableProgressTracking\\Hooks"
		}
	},
	"RestRoutes": [
		{
			"path": "/progress-tracking/{articleId}/{tableId}",
			"method": "POST",
			"class": "Telepedia\\Extensions\\TableProgressTracking\\Rest\\TrackProgressHandler",
			"services": [
				"TableProgressTracking.ProgressService"
			]
		},
		{
			"path": "/progress-tracking/{articleId}/{tableId}",
			"method": "GET",
			"class": "Telepedia\\Extensions\\TableProgressTracking\\Rest\\GetProgressHandler",
			"services": [
				"TableProgressTracking.ProgressService"
			]
		},
		{
			"path": "/progress-tracking/{articleId}/{tableId}",
			"method": "DELETE",
			"class": "Telepedia\\Extensions\\TableProgressTracking\\Rest\\DeleteProgressHandler",
			"services": [
				"TableProgressTracking.ProgressService"
			]
		}
	],
	"ServiceWiringFiles": [
		"includes/ServiceWiring.php"
	],
	"AutoloadNamespaces": {
		"Telepedia\\Extensions\\TableProgressTracking\\": "includes/"
	},
	"TrackingCategories": [
		"tpt-tracking-category"
	],
    "config": {
      "TableProgressTrackingMaxRows": {
        "description": "Integer. Maximum amount of rows that will be parsed before returning an error.",
        "value": 100
      },
      "TableProgressTrackingMaxColumns": {
        "description": "Integer. Maximum amount of columns that will be parsed before returning an error.",
        "value": 10
      },
      "TableProgressTrackingMaxHTMLSize": {
        "description": "Integer. Parser will bail when the parsed HTML reaches this value. Set to 25% of $wgMaxArticleSize by default",
        "value": null
      },
      "TableProgressTrackingMaxProcessingTime": {
        "description": "Integer. Maximum number of seconds before the parser abandons parsing",
        "value": 5
      },
      "TableProgressTrackingMaxInputSize": {
        "description": "Integer. Maximum bytes of wikitext allowable for parsing. Default to 50KB",
        "value": 50000
      }
    },
    "ConfigRegistry": {
      "TableProgressTracking": "MediaWiki\\Config\\GlobalVarConfig::newInstance"
    },
	"manifest_version": 2
}